<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="basic"
            type="com.konkuk.mocacong.data.entities.BasicPlaceInfo" />

        <variable
            name="detail"
            type="com.konkuk.mocacong.presentation.models.CafeDetailUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:id="@+id/imagesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:columnCount="3"

                    android:orientation="vertical"
                    android:rowCount="2"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_rowSpan="2"
                        android:layout_columnWeight="1"
                        android:background="@drawable/shape_bordered_rect"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/shape_bordered_rect"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/shape_bordered_rect"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/shape_bordered_rect"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/shape_bordered_rect"
                        android:scaleType="centerCrop" />
                </GridLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/cafeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{basic.name}"
                        android:textColor="@color/darkBrown"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ratingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{detail.scoreString}"
                        android:textColor="@color/darkBrown"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@id/reviewText"
                        app:layout_constraintEnd_toStartOf="@id/reviewText" />

                    <TextView
                        android:id="@+id/reviewText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingHorizontal="10dp"
                        android:text="@{detail.reviewsCountString}"
                        android:textColor="@color/darkBrown"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cafeName" />

                    <TextView
                        android:id="@+id/commentText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{detail.commentsCountString}"
                        android:textColor="@color/darkBrown"
                        android:textSize="15sp"
                        app:layout_constraintBaseline_toBaselineOf="@id/reviewText"
                        app:layout_constraintStart_toEndOf="@id/reviewText" />

                    <com.willy.ratingbar.BaseRatingBar
                        android:id="@+id/ratingView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:clickable="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/reviewText"
                        app:srb_drawableEmpty="@drawable/false_cong"
                        app:srb_drawableFilled="@drawable/true_cong"
                        app:srb_isIndicator="true"
                        app:srb_rating="0"
                        app:srb_starHeight="30dp"
                        app:srb_starPadding="0dp"
                        app:srb_starWidth="30dp"
                        app:srb_stepSize="0.5" />

                    <ImageButton
                        android:id="@+id/editBtn"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="90dp"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/detail_btn_edit_review"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ratingView" />

                    <ImageButton
                        android:id="@+id/favBtn"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/detail_favorite_selector"
                        app:layout_constraintStart_toEndOf="@id/editBtn"
                        app:layout_constraintTop_toTopOf="@id/editBtn" />

                    <TextView
                        android:id="@+id/addrText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:paddingStart="10dp"
                        android:text="@{basic.addressString}"
                        android:textColor="@color/textGray"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editBtn" />


                    <TextView
                        android:id="@+id/telText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingStart="10dp"
                        android:text="@{basic.phoneString}"
                        android:textColor="@color/textGray"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/addrText" />

                    <include
                        layout="@layout/layout_reviews"
                        app:reviews="@{detail.reviews}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/stroke"
                        app:layout_constraintTop_toBottomOf="@id/reviewsLayout" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical"
                        android:paddingBottom="60dp"
                        app:layout_constraintTop_toBottomOf="@id/reviewsLayout">

                        <com.konkuk.mocacong.presentation.detail.CafeCommentView
                            android:id="@+id/comment1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:commentContent=""
                            app:commentNickname="" />

                        <com.konkuk.mocacong.presentation.detail.CafeCommentView
                            android:id="@+id/comment2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:commentContent=""
                            app:commentNickname="" />

                        <com.konkuk.mocacong.presentation.detail.CafeCommentView
                            android:id="@+id/comment3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:commentContent=""
                            app:commentNickname="" />

                        <TextView
                            android:id="@+id/noCommentText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="20dp"
                            android:text="댓글이 아직 없어요 n.n" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="20dp"
                            android:text="댓글 전체 보기"
                            android:visibility="gone" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/commentInputBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect_r10_empty"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/myProfileImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_circle"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center|left"
                android:paddingStart="20dp"
                android:text="000님의 댓글 쓰기"
                android:textColor="#898888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="전송"
                android:textColor="@color/ssook"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>