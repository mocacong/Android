<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.SignInActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"
        />


    <ImageView
        android:id="@+id/logoText"
        android:layout_width="244dp"
        android:layout_height="66dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toRightOf="@id/rightline"
        app:layout_constraintTop_toBottomOf="@id/topline"
        app:layout_constraintWidth_percent="0.6" />


    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0"
        android:gravity="center"
        android:text="로그인"
        android:textStyle="bold"
        android:textColor="@color/jinBrown"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toRightOf="@id/rightline"
        app:layout_constraintTop_toBottomOf="@id/logoText"
        />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="0dp"
        android:text="jsshin0107@gmail.com"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/logoText"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toRightOf="@id/rightline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:textColor="@color/black"
        android:background="@drawable/round_stroke"
        android:layout_marginTop="50dp"
        android:hint="ID"
        android:textSize="18sp"
        android:textColorHint="@color/jingray"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/pwText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="tlswltn9"
        app:layout_constraintTop_toBottomOf="@id/emailText"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toRightOf="@id/rightline"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:background="@drawable/round_stroke"
        android:layout_marginTop="20dp"
        android:hint="password"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textColorHint="@color/jingray"
        android:inputType="textPassword"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/signInBtn"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/pwText"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toLeftOf="@id/rightline"
        android:background="@drawable/round_btn"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/darkBrown"
        android:text="이메일 아이디로 로그인"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/kakaoBtn"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/signInBtn"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toLeftOf="@id/rightline"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FEE500"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="카카오 계정으로 로그인"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/findBtn"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toLeftOf="@id/signUpBtn"
        app:layout_constraintTop_toBottomOf="@id/kakaoBtn"
        android:text="ID/PW 찾기"
        android:textColor="@color/darkBrown"
        android:textSize="13sp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpBtn"
        android:text="회원가입"
        android:textColor="@color/darkBrown"
        app:layout_constraintLeft_toRightOf="@id/findBtn"
        app:layout_constraintBaseline_toBaselineOf="@id/findBtn"
        app:layout_constraintRight_toRightOf="@id/rightline"
        />

</androidx.constraintlayout.widget.ConstraintLayout>