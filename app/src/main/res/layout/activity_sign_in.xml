<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mocaBrown"
    tools:context=".signin.SignInActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"
        />


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome"
        android:textStyle="bold"
        android:textColor="@color/darkBrown"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toRightOf="@id/rightline"
        app:layout_constraintTop_toTopOf="@id/topline" />

    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Mocacong"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toRightOf="@id/rightline"
        app:layout_constraintTop_toBottomOf="@id/welcome" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/logoText"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toRightOf="@id/rightline"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:hint="ID"

        android:textSize="18sp"
        android:textColorHint="@color/jingray"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/pwText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/emailText"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toRightOf="@id/rightline"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:hint="password"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textColorHint="@color/jingray"
        android:inputType="textPassword"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/signInBtn"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/pwText"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toLeftOf="@id/rightline"
        android:background="@drawable/round_btn"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="로그인"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/signUpBtn"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/signInBtn"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toLeftOf="@id/rightline"
        android:background="@drawable/round_btn"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="회원가입"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/findBtn"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toRightOf="@id/rightline"
        app:layout_constraintTop_toBottomOf="@id/signUpBtn"
        android:text="ID/PW 찾기"
        android:enabled="false"
        android:textColor="@color/white"
        android:clickable="false"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/OAuthContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/leftline"
        app:layout_constraintRight_toRightOf="@id/rightline"
        android:background="@drawable/round_rectangle"
        app:layout_constraintBottom_toBottomOf="@id/bottomline"
        app:layout_constraintHeight_percent="0.15"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/OAuthContainer"
        app:layout_constraintLeft_toLeftOf="@id/OAuthContainer"
        android:id="@+id/OAuthText"
        android:text="다음 소셜 계정으로 로그인"
        android:layout_margin="15dp"
        />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:paddingVertical="5dp"
        android:src="@drawable/kakaologin"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="@id/OAuthText"
        app:layout_constraintTop_toBottomOf="@id/OAuthText"
        app:layout_constraintBottom_toBottomOf="@id/OAuthContainer"
        android:id="@+id/kakaoBtn"
        />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/naverlogin"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:layout_marginLeft="10dp"
        android:id="@+id/naverBtn"
        android:padding = "5dp"
        app:layout_constraintLeft_toRightOf="@id/kakaoBtn"
        app:layout_constraintTop_toTopOf="@id/kakaoBtn"
        app:layout_constraintBottom_toBottomOf="@id/kakaoBtn"
        app:layout_constraintRight_toRightOf="@id/OAuthContainer"
        app:layout_constraintHorizontal_bias="0"
        />





</androidx.constraintlayout.widget.ConstraintLayout>