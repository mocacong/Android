<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkBrown"
    android:padding="5dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile_no_image"
        android:id="@+id/profileImage"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_margin="5dp"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:background="@drawable/round_btn"
        app:layout_constraintLeft_toLeftOf="@id/profileImage"
        app:layout_constraintRight_toRightOf="@id/profileImage"
        app:layout_constraintBaseline_toBottomOf="@id/profileImage"
        android:backgroundTint="@color/ssook"
        android:text="my"
        android:gravity="center"
        android:id="@+id/myReview"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/nicknameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname"
        app:layout_constraintLeft_toRightOf = "@id/profileImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/commentTextView"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/commentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Comment text"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="@id/nicknameTextView"
        app:layout_constraintRight_toLeftOf="@id/moreButton"
        app:layout_constraintTop_toBottomOf="@id/nicknameTextView"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <TextView
        android:id="@+id/moreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더보기"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
