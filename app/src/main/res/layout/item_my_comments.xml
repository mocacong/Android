<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingVertical="20dp"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CafeName"
        android:textColor="@color/darkBrown"
        android:textStyle="bold"
        android:textSize="13sp"
        android:id="@+id/cafe"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gotoDetailBtn"
        app:layout_constraintBottom_toTopOf="@id/commentText"
        />

    <TextView
        android:layout_marginVertical="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/textGray"
        android:textSize="12sp"
        android:id="@+id/commentText"
        app:layout_constraintTop_toBottomOf="@id/cafe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/cafe"
        app:layout_constraintRight_toRightOf="@id/cafe"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â–¶"
        android:id="@+id/gotoDetailBtn"
        android:background="@color/transparent"
        android:textColor="@color/darkBrown"
        app:layout_constraintLeft_toRightOf="@id/cafe"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>