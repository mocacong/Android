<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingVertical="25dp"
    android:layout_marginVertical="0.5dp">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/true_cong"
        android:layout_marginLeft="10dp"
        android:id="@+id/img"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CafeName"
        android:textColor="@color/jinBrown"
        android:textStyle="bold"
        android:textSize="13sp"
        android:id="@+id/cafe"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addrText"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/mocaBrown"
        android:text="주소"
        app:layout_constraintTop_toBottomOf="@id/cafe"
        app:layout_constraintLeft_toLeftOf="@id/cafe"
        app:layout_constraintRight_toRightOf="@id/cafe"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="10sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/addrText"
        />

</androidx.constraintlayout.widget.ConstraintLayout>