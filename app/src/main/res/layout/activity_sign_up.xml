<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentaion.login.SignUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <ImageView
            android:id="@+id/logoText"
            android:layout_width="244dp"
            android:layout_height="66dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/topline"
            app:layout_constraintWidth_percent="0.6" />

        <TextView
            android:id="@+id/startText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 가입을 시작해볼까요?"
            android:textColor="@color/darkBrown"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/logoText" />


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="email"
            android:textColor="@color/darkBrown"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/startText" />

        <Button
            android:id="@+id/emailOk"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:text="확인"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toRightOf="@id/emailText"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toTopOf="@+id/email"
            app:layout_constraintWidth_percent="0.2" />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mocaBrown"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/darkBrown"
            app:layout_constraintBaseline_toBottomOf="@id/emailOk"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/emailOk"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintWidth_percent="0.65" />

        <TextView
            android:id="@+id/emailConfirmText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이메일 형식에 맞게 입력해주세요"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/emailText" />


        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="nickname"
            android:textColor="@color/darkBrown"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/emailText" />

        <Button
            android:id="@+id/nicknameOk"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:text="확인"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toRightOf="@id/nicknameText"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toTopOf="@+id/nickname"
            app:layout_constraintWidth_percent="0.2" />

        <EditText
            android:id="@+id/nicknameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/mocaBrown"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/darkBrown"
            app:layout_constraintBaseline_toBottomOf="@id/nicknameOk"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/nicknameOk"
            app:layout_constraintTop_toBottomOf="@id/nickname"
            app:layout_constraintWidth_percent="0.65" />

        <TextView
            android:id="@+id/nicknameConfirmText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="닉네임은 영어, 한글로만 구성된 2~6자여야 합니다"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/nicknameText" />


        <TextView
            android:id="@+id/pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="PW"
            android:textColor="@color/darkBrown"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/nicknameText" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pwLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/pw"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/pwText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/mocaBrown"
                android:foregroundTint="@color/mocaBrown"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/darkBrown" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/pwConfirmText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="비밀번호 형식은 소문자, 숫자 반드시 포함 8~20자입니다"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/pwLayout" />


        <TextView
            android:id="@+id/pw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/mocaBrown"
            android:text="PW확인"
            android:textColor="@color/darkBrown"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/pwLayout" />

        <EditText
            android:id="@+id/pw2Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mocaBrown"
            android:inputType="textPassword"
            android:textColor="@color/darkBrown"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/pw2" />

        <TextView
            android:id="@+id/warningText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="비밀번호가 일치하지 않습니다"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/pw2Text" />


        <Button
            android:id="@+id/registerBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_btn"
            android:text="가입하기"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toLeftOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/pw2Text" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/round_btn"
            android:backgroundTint="@color/darkBrown"
            android:text="취소"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toLeftOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/registerBtn" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/skyBlue"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>