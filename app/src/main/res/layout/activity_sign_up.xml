<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mocaBrown"
    tools:context=".activities.SignUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mocacong"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="40sp"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toTopOf="@id/topline" />

        <TextView
            android:id="@+id/startText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 가입을 시작해볼까요?"
            android:textColor="@color/darkBrown"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toBottomOf="@id/logoText" />



        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:textColor="@color/darkBrown"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/startText"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintHorizontal_bias="0"
            />
        <Button
            android:id="@+id/emailOk"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="확인"
            android:textColor="@color/white"
            android:background="@drawable/round_btn"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toRightOf="@id/emailText"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toTopOf="@+id/email" />

        <EditText
            android:id="@+id/emailText"
            android:backgroundTint="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintBaseline_toBottomOf="@id/emailOk"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/emailOk"
            app:layout_constraintWidth_percent="0.65"
            app:layout_constraintHorizontal_bias="0"
            android:inputType="textEmailAddress"
            />


        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkBrown"
            android:text="nickname"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/emailText"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintHorizontal_bias="0"
            />
        <Button
            android:id="@+id/nicknameOk"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="확인"
            android:textColor="@color/white"
            android:background="@drawable/round_btn"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toRightOf="@id/nicknameText"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintTop_toTopOf="@+id/nickname" />

        <EditText
            android:id="@+id/nicknameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintBaseline_toBottomOf="@id/nicknameOk"
            app:layout_constraintTop_toBottomOf="@id/nickname"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/nicknameOk"
            app:layout_constraintWidth_percent="0.65"
            android:backgroundTint="@color/white"
            app:layout_constraintHorizontal_bias="0"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PW"
            android:textColor="@color/darkBrown"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/nicknameText"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintHorizontal_bias="0"
            />
        <EditText
            android:id="@+id/pwText"
            android:layout_width="0dp"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/pw"
            android:inputType="textPassword"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pwText"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            android:visibility="invisible"
            android:textColor="@color/darkBrown"
            android:textSize="13sp"
            android:id="@+id/pwConfirmText"
            android:text="비밀번호 형식은 소문자, 숫자 반드시 포함 8~20자입니다"
            />




        <TextView
            android:id="@+id/pw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PW확인"
            android:textColor="@color/darkBrown"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/pwText"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintHorizontal_bias="0"
            />
        <EditText
            android:id="@+id/pw2Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pw2"
            android:inputType="textPassword"
            android:backgroundTint="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pw2Text"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            android:visibility="invisible"
            android:textColor="@color/darkBrown"
            android:textSize="13sp"
            android:id="@+id/warningText"
            android:text="비밀번호가 일치하지 않습니다"
            />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkBrown"
            android:text="Phone"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/pw2Text"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            app:layout_constraintHorizontal_bias="0"
            />
        <EditText
            android:id="@+id/phoneText"
            android:layout_width="0dp"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/phone"
            android:inputType="phone"

            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toRightOf="@id/rightline"
            />


        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/phoneText"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toLeftOf="@id/rightline"
            android:id="@+id/registerBtn"
            android:background="@drawable/round_btn"
            android:textColor="@color/white"
            android:text="가입하기"
            android:layout_marginTop="40dp"
            android:enabled="false"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/cancelBtn"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/registerBtn"
            app:layout_constraintLeft_toLeftOf="@id/leftline"
            app:layout_constraintRight_toLeftOf="@id/rightline"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/round_btn"
            android:textColor="@color/white"
            android:text="취소"
            android:layout_marginBottom="40dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>