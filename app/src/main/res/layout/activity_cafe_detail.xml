<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.CafeDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imagesGridLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cafeName"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"

            android:background="@drawable/round_btn"
            android:backgroundTint="@color/darkBrown"
            android:enabled="false"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBottomOf="@id/imagesGridLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.6" />

        <com.willy.ratingbar.BaseRatingBar
            android:id="@+id/scoreImgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cafeName"
            app:srb_clearRatingEnabled="true"
            app:srb_clickable="true"
            app:srb_drawableEmpty="@drawable/false_cong"
            app:srb_drawableFilled="@drawable/true_cong"
            app:srb_isIndicator="true"
            app:srb_minimumStars="0"
            app:srb_numStars="5"
            app:srb_rating="0"
            app:srb_scrollable="true"
            app:srb_starHeight="40dp"
            app:srb_starPadding="2dp"
            app:srb_starWidth="40dp"
            app:srb_stepSize="0.5" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="★ 0.0 / 5"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scoreImgs" />

        <ImageButton
            android:id="@+id/favBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:paddingRight="10dp"
            android:scaleType="fitEnd"
            android:src="@drawable/detail_fav"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/editBtn"
            app:layout_constraintTop_toBottomOf="@id/scoreText" />

        <ImageButton
            android:id="@+id/editBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:paddingLeft="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/detail_edit"
            app:layout_constraintLeft_toRightOf="@id/favBtn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/favBtn" />

        <ImageView
            android:id="@+id/locIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/detail_location"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/addressText"
            app:layout_constraintTop_toBottomOf="@id/favBtn"
            app:tint="@color/darkBrown" />

        <TextView
            android:id="@+id/addressText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="주소 정보 없음"
            android:textColor="@color/darkBrown"
            app:layout_constraintLeft_toRightOf="@id/locIcon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/locIcon" />


        <ImageView
            android:id="@+id/callIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/detail_call"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/callText"
            app:layout_constraintTop_toBottomOf="@id/locIcon"
            app:tint="@color/darkBrown" />

        <TextView
            android:id="@+id/callText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="전화번호 정보 없음"
            android:textColor="@color/darkBrown"
            app:layout_constraintLeft_toRightOf="@id/callIcon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/callIcon" />

        <TextView
            android:id="@+id/reviewCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="0"
            android:textColor="@color/darkBrown"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/callIcon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Reviewers Answered : "
            android:textColor="@color/darkBrown"
            app:layout_constraintBottom_toBottomOf="@id/reviewCountText"
            app:layout_constraintLeft_toRightOf="@id/reviewCountText"
            app:layout_constraintTop_toTopOf="@id/reviewCountText" />

        <GridLayout

            android:id="@+id/detailsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reviewCountText"

            >

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/detail_wifi"
                app:tint="@color/darkBrown" />

            <TextView
                android:id="@+id/wifiText"
                android:layout_margin="10dp"
                android:text="@string/plzRV"
                android:textColor="@color/jingray" />

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/detail_parking"
                app:tint="@color/darkBrown" />

            <TextView
                android:id="@+id/parkingText"
                android:layout_margin="10dp"
                android:text="@string/plzRV"
                android:textColor="@color/jingray" />

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/detail_toilet"
                app:tint="@color/darkBrown" />

            <TextView
                android:id="@+id/toiletText"
                android:layout_margin="10dp"
                android:text="@string/plzRV"
                android:textColor="@color/jingray" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="10dp"
                android:src="@drawable/detail_desk"
                app:tint="@color/darkBrown" />

            <TextView
                android:id="@+id/deskText"
                android:layout_margin="10dp"
                android:text="@string/plzRV"
                android:textColor="@color/jingray" />

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/detail_power"
                app:tint="@color/darkBrown" />

            <TextView
                android:id="@+id/powerText"
                android:layout_margin="10dp"
                android:text="@string/plzRV"
                android:textColor="@color/jingray" />

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/detail_sound"
                app:tint="@color/darkBrown" />

            <TextView
                android:id="@+id/soundText"
                android:layout_margin="10dp"
                android:text="@string/plzRV"
                android:textColor="@color/jingray" />


        </GridLayout>

        <TextView
            android:id="@+id/commentCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textColor="@color/darkBrown"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailsContainer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Comments :"
            android:textColor="@color/darkBrown"
            app:layout_constraintBaseline_toBaselineOf="@id/commentCountText"
            app:layout_constraintLeft_toRightOf="@id/commentCountText" />

        <TextView
            android:id="@+id/writeCommentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성하기"
            android:textColor="@color/ssook"
            app:layout_constraintBottom_toBottomOf="@id/commentCountText"
            app:layout_constraintRight_toRightOf="@id/commentsLayout"
            app:layout_constraintTop_toTopOf="@id/commentCountText" />

        <LinearLayout
            android:id="@+id/commentsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#F6F6F6"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/commentCountText">

            <TextView
                android:id="@+id/noCmtTextView"
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="100dp"
                android:text="첫 번째 코멘트를 등록해 주세요!" />

            <com.example.mocacong.ui.CommentView
                android:id="@+id/comment1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="0.5dp"
                android:visibility="gone" />

            <com.example.mocacong.ui.CommentView
                android:id="@+id/comment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <com.example.mocacong.ui.CommentView
                android:id="@+id/comment3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="0.5dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/commentMoreBtn"
                style="@style/textStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="0.5dp"
                android:background="@color/mocaBrown"
                android:paddingVertical="10dp"
                android:text="더보기"
                android:visibility="gone" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>