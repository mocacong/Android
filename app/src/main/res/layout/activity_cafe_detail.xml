<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="detailInfo"
            type="com.konkuk.mocacong.remote.models.response.CafeResponse" />

        <variable
            name="placeInfo"
            type="com.konkuk.mocacong.remote.models.response.Place" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.detail.CafeDetailActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cafeImage_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_bordered_rect"
                android:padding="1dp"
                android:scaleType="center"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5" />

            <ImageView
                android:id="@+id/cafeImage_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_bordered_rect"
                android:padding="1dp"
                android:scaleType="center"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@id/cafeImage_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.25" />

            <ImageView
                android:id="@+id/cafeImage_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_bordered_rect"
                android:padding="1dp"
                android:scaleType="center"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@id/cafeImage_1"
                app:layout_constraintTop_toBottomOf="@id/cafeImage_2"
                app:layout_constraintWidth_percent="0.25" />

            <ImageView
                android:id="@+id/cafeImage_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_bordered_rect"
                android:padding="1dp"
                android:scaleType="center"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@id/cafeImage_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.25" />

            <ImageView
                android:id="@+id/cafeImage_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_bordered_rect"
                android:padding="1dp"
                android:scaleType="center"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@id/cafeImage_3"
                app:layout_constraintTop_toBottomOf="@id/cafeImage_4"
                app:layout_constraintWidth_percent="0.25" />

            <ImageButton
                android:id="@+id/cafeImage_plusBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:elevation="1dp"
                android:padding="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_image_plus"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@id/cafeImage_3"
                app:layout_constraintTop_toBottomOf="@id/cafeImage_4"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/cafeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="@{placeInfo.place_name}"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cafeImage_1"
                app:layout_constraintWidth_percent="0.6" />

            <com.willy.ratingbar.BaseRatingBar
                android:id="@+id/scoreImgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="@{detailInfo.f_score}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cafeName"
                app:srb_clearRatingEnabled="true"
                app:srb_clickable="true"
                app:srb_drawableEmpty="@drawable/false_cong"
                app:srb_drawableFilled="@drawable/true_cong"
                app:srb_isIndicator="true"
                app:srb_minimumStars="0"
                app:srb_numStars="5"
                app:srb_scrollable="true"
                app:srb_starHeight="30dp"
                app:srb_starPadding="2dp"
                app:srb_starWidth="30dp"
                app:srb_stepSize="0.5" />

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="★ 0.0 / 5"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scoreImgs" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/favBtn"
                android:layout_width="30dp"
                android:layout_height="27dp"
                android:background="@drawable/detail_favorite_selector"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scoreText" />

            <ImageButton
                android:id="@+id/commentBtn"
                android:layout_width="25dp"
                android:layout_height="27dp"
                android:layout_marginHorizontal="30dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/detail_btn_comment"
                app:layout_constraintRight_toLeftOf="@id/favBtn"
                app:layout_constraintTop_toTopOf="@id/favBtn" />


            <ImageButton
                android:id="@+id/editBtn"
                android:layout_width="25dp"
                android:layout_height="27dp"
                android:layout_marginHorizontal="30dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/detail_btn_edit"
                app:layout_constraintLeft_toRightOf="@id/favBtn"
                app:layout_constraintTop_toTopOf="@id/favBtn" />

            <ImageView
                android:id="@+id/locIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/detail_location"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/addressText"
                app:layout_constraintTop_toBottomOf="@id/favBtn"
                app:tint="@color/darkBrown" />

            <TextView
                android:id="@+id/addressText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{placeInfo.addressString}"
                android:textColor="@color/darkBrown"
                app:layout_constraintLeft_toRightOf="@id/locIcon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/locIcon" />


            <ImageView
                android:id="@+id/callIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/detail_call"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/callText"
                app:layout_constraintTop_toBottomOf="@id/locIcon"
                app:tint="@color/darkBrown" />

            <TextView
                android:id="@+id/callText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{placeInfo.phoneString}"
                android:textColor="@color/darkBrown"
                app:layout_constraintLeft_toRightOf="@id/callIcon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/callIcon" />

            <TextView
                android:id="@+id/reviewCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="@{@string/reviewCountFormatString(detailInfo.reviewsCount)}"
                android:textColor="@color/darkBrown"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/callIcon" />

            <GridLayout
                android:id="@+id/detailsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reviewCountText"

                >

                <ImageView
                    android:layout_margin="10dp"
                    android:src="@drawable/detail_wifi"
                    app:tint="@color/darkBrown" />

                <TextView
                    android:id="@+id/wifiText"
                    android:layout_margin="10dp"
                    android:text="@{detailInfo.wifiString}"
                    android:textColor="@{detailInfo.getRVStringColor(detailInfo.wifiString)}" />

                <ImageView
                    android:layout_margin="10dp"
                    android:src="@drawable/detail_parking"
                    app:tint="@color/darkBrown" />

                <TextView
                    android:id="@+id/parkingText"
                    android:layout_margin="10dp"
                    android:text="@{detailInfo.parkingString}"
                    android:textColor="@{detailInfo.getRVStringColor(detailInfo.parkingString)}" />

                <ImageView
                    android:layout_margin="10dp"
                    android:src="@drawable/detail_toilet"
                    app:tint="@color/darkBrown" />

                <TextView
                    android:id="@+id/toiletText"
                    android:layout_margin="10dp"
                    android:text="@{detailInfo.toiletString}"
                    android:textColor="@{detailInfo.getRVStringColor(detailInfo.toiletString)}" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/detail_desk"
                    app:tint="@color/darkBrown" />

                <TextView
                    android:id="@+id/deskText"
                    android:layout_margin="10dp"
                    android:text="@{detailInfo.deskString}"
                    android:textColor="@{detailInfo.getRVStringColor(detailInfo.deskString)}" />

                <ImageView
                    android:layout_margin="10dp"
                    android:src="@drawable/detail_power"
                    app:tint="@color/darkBrown" />

                <TextView
                    android:id="@+id/powerText"
                    android:layout_margin="10dp"
                    android:text="@{detailInfo.powerString}"
                    android:textColor="@{detailInfo.getRVStringColor(detailInfo.powerString)}" />

                <ImageView
                    android:layout_margin="10dp"
                    android:src="@drawable/detail_sound"
                    app:tint="@color/darkBrown" />

                <TextView
                    android:id="@+id/soundText"
                    android:layout_margin="10dp"
                    android:text="@{detailInfo.soundString}"
                    android:textColor="@{detailInfo.getRVStringColor(detailInfo.soundString)}" />
            </GridLayout>

            <TextView
                android:id="@+id/commentCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="@{@string/commentsCountFormatString(detailInfo.commentsCount)}"
                android:textColor="@color/darkBrown"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detailsContainer" />

            <LinearLayout
                android:id="@+id/commentsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/commentCountText">

                <TextView
                    android:id="@+id/noCmtTextView"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="40dp"
                    android:text="코멘트가 아직 없어요 ㅠ.ㅠ"
                    android:textColor="@color/textGray" />

                <com.konkuk.mocacong.presentation.detail.CommentView
                    android:id="@+id/comment1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <com.konkuk.mocacong.presentation.detail.CommentView
                    android:id="@+id/comment2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <com.konkuk.mocacong.presentation.detail.CommentView
                    android:id="@+id/comment3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="0.5dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/commentMoreBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="0.5dp"
                    android:paddingVertical="10dp"
                    android:text="모든 댓글 보기"
                    android:textColor="@color/darkBrown"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/commentsLayout">

                <TextView
                    android:id="@+id/commentPlusBar"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="9"
                    android:background="@drawable/round_stroke"
                    android:gravity="left|center"
                    android:paddingLeft="35dp"
                    android:text="카페의 코멘트를 작성해 보세요!"
                    android:textColor="@color/jingray" />

                <ImageButton
                    android:id="@+id/commentSendBtn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_send" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>
