<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.MypageFragment">

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/shape_circle"
        android:id="@+id/profileImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tabLayout"
        android:src="@drawable/baseline_person_24"
        android:scaleType="fitCenter"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:src="@drawable/mypage_edit_btn"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="@id/profileImg"
        app:layout_constraintBottom_toBottomOf="@id/profileImg"
        />




    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profileImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Ninkname"
        style="@style/textStyle"
        android:id="@+id/nickNameText"
        android:textSize="20sp"

        />



    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabLayout"
        android:background="@color/mocaBrown"
        app:layout_constraintTop_toBottomOf="@id/nickNameText"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/viewPager"
        />




</androidx.constraintlayout.widget.ConstraintLayout>