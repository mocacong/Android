<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingVertical="25dp"
    android:layout_marginVertical="0.5dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CafeName"
        android:textColor="@color/jinBrown"
        android:textStyle="bold"
        android:textSize="13sp"
        android:id="@+id/cafe"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/scoreImgs"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="left|center"
        />


    <com.willy.ratingbar.BaseRatingBar
        android:id="@+id/scoreImgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srb_numStars="5"
        app:srb_minimumStars="0"
        app:srb_rating="0"
        app:srb_starWidth="30dp"
        app:srb_starHeight="30dp"
        app:srb_starPadding="1dp"
        app:srb_stepSize="0.5"
        app:srb_isIndicator="true"
        app:srb_clickable="true"
        app:srb_scrollable="true"
        app:srb_clearRatingEnabled="true"
        app:srb_drawableEmpty="@drawable/false_cong"
        app:srb_drawableFilled="@drawable/true_cong"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cafe"
        android:layout_marginRight="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>