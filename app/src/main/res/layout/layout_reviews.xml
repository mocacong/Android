<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="reviews"
            type="com.konkuk.mocacong.presentation.models.ReviewsUiModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.konkuk.mocacong.presentation.detail.ReviewItem
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                app:reviewCategory="power"
                app:reviewIconImg="@drawable/detail_ic_power"
                app:reviewString="@{reviews.power}" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <com.konkuk.mocacong.presentation.detail.ReviewItem
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                app:reviewCategory="desk"
                app:reviewIconImg="@drawable/detail_ic_desk"
                app:reviewString="@{reviews.desk}" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.konkuk.mocacong.presentation.detail.ReviewItem
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                app:reviewCategory="wifi"
                app:reviewIconImg="@drawable/detail_ic_wifi"
                app:reviewString="@{reviews.wifi}" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <com.konkuk.mocacong.presentation.detail.ReviewItem
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                app:reviewCategory="sound"
                app:reviewIconImg="@drawable/detail_ic_sound"
                app:reviewString="@{reviews.sound}" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.konkuk.mocacong.presentation.detail.ReviewItem
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                app:reviewCategory="toilet"
                app:reviewIconImg="@drawable/detail_ic_toilet"
                app:reviewString="@{reviews.toilet}" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <com.konkuk.mocacong.presentation.detail.ReviewItem
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                app:reviewCategory="parking"
                app:reviewIconImg="@drawable/detail_ic_parking"
                app:reviewString="@{reviews.parking}" />
        </LinearLayout>

    </LinearLayout>
</layout>