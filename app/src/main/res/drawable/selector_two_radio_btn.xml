<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/darkBrown" />
            <stroke android:width="1dp" android:color="@color/darkBrown" />
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:left="40dp"
                android:right="40dp"
                />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/stroke" />
            <stroke android:width="1dp" android:color="@color/darkBrown" />
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:left="40dp"
                android:right="40dp"
                />
        </shape>
    </item>
</selector>