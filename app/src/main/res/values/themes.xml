<resources>
    <!-- Base application theme. -->
    <style name="Theme.Mocacong" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkBrown</item>
        <item name="colorPrimaryVariant">@color/jinBrown</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/jinBrown</item>
        <item name="colorSecondaryVariant">@color/mocaBrown</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/white</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkBrown</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetFragmentStyle</item>

        <!--alart dialog-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

        <item name="colorAccent">@color/ssook</item>
        <item name="android:textColorHighlight">@color/ssook</item>


        <!--font style-->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>

    </style>


</resources>